<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bytagramm.LoginPage"
             xmlns:viewmodel="clr-namespace:Bytagramm.ViewModels"
             x:DataType="viewmodel:LoginViewModel">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                CornerRadius="20"
                Padding="30"
                WidthRequest="320"
                HasShadow="True"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <VerticalStackLayout Spacing="20"
                                  HorizontalOptions="Fill"
                                  VerticalOptions="Center">

                    <!-- App title -->
                    <Label Text="Bytagramm"
                        FontSize="32"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="#333"/>
                    
                    <!-- LogIn title -->
                    <Label Text="Log In"
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#333"/>

                    <!-- Username -->
                    <Entry Placeholder="Username or Email"
                        Text="{Binding UsernameOrEmail}"
                        FontSize="16"
                        BackgroundColor="#F9F9F9"
                        TextColor="#000"
                        PlaceholderColor="#888"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"/>

                    <!-- Password -->
                    <Entry Placeholder="Password"
                        Text="{Binding Password}"
                        IsPassword="{Binding IsPassword}"
                        FontSize="16"
                        BackgroundColor="#F9F9F9"
                        TextColor="#000"
                        PlaceholderColor="#888"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"/>

                    <!-- Show password toggle -->
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10">
                        <CheckBox IsChecked="{Binding ShowPassword}" />
                        <Label Text="Show password"
                            TextColor="#000"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Start"
                            WidthRequest="120" />
                    </HorizontalStackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                        <Label Text="If you are new here"
                           FontSize="12"
                           FontAttributes="None"
                           VerticalOptions="Center"
                           TextColor="#333" />

                        <Button Text="Sign Up"
                            Command="{Binding SignupCommand}"
                            FontSize="12"
                            Padding="4,0"
                            Margin="8,0,0,0"
                            HeightRequest="24"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent"
                            TextColor="#007AFF"/>
                    </StackLayout>

                    <!-- Register button -->
                    <Button Text="Log In"
                         Command="{Binding LoginCommand}"
                         BackgroundColor="#FF4500"
                         TextColor="White"
                         FontAttributes="Bold"
                         HeightRequest="50"
                         CornerRadius="10"
                         HorizontalOptions="FillAndExpand"/>
                    
                </VerticalStackLayout>

            </Frame>
        </Grid>
    </ScrollView>


</ContentPage>