<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bytagramm.RegistrationPage"
             xmlns:viewmodel="clr-namespace:Bytagramm.ViewModels"
             x:DataType="viewmodel:RegistrationViewModel"
             Title="RegistrationPage">


    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame Grid.Row="1"
                   Grid.Column="1"
                   BackgroundColor="White"
                   CornerRadius="20"
                   Padding="30"
                   WidthRequest="320"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <VerticalStackLayout Spacing="20"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Center">

                    <!-- App title -->
                    <Label Text="Bytagramm"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#333"/>

                    <!-- SignIn title -->
                    <Label Text="Sign In"
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#333"/>   

                    <!-- Username -->
                    <Entry Placeholder="Username"
                           Text="{Binding Username}"
                           FontSize="16"
                           BackgroundColor="#F9F9F9"
                           TextColor="#000"
                           PlaceholderColor="#888"
                           HeightRequest="50"
                           HorizontalOptions="FillAndExpand"/>

                    <!-- Email -->
                    <Entry Placeholder="Email"
                           Text="{Binding Mail}"
                           FontSize="16"
                           BackgroundColor="#F9F9F9"
                           TextColor="#000"
                           PlaceholderColor="#888"
                           HeightRequest="50"
                           HorizontalOptions="FillAndExpand"/>

                    <!-- Password -->
                    <Entry Placeholder="Password"
                           Text="{Binding Password}"
                           IsPassword="{Binding IsPassword}"
                           FontSize="16"
                           BackgroundColor="#F9F9F9"
                           TextColor="#000"
                           PlaceholderColor="#888"
                           HeightRequest="50"
                           HorizontalOptions="FillAndExpand"/>

                    <!-- Show password toggle -->
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10">
                        <CheckBox IsChecked="{Binding ShowPassword}" />
                        <Label Text="Show password"
                           TextColor="#000"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="Start"
                           WidthRequest="120" />    
                    </HorizontalStackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                        <Label Text="If you have profile"
                           FontSize="12"
                           FontAttributes="None"
                           VerticalOptions="Center"
                           TextColor="#333" />

                        <Button Text="Log in"
                            Command="{Binding LoginCommand}"
                            FontSize="12"
                            Padding="4,0"
                            Margin="8,0,0,0"
                            HeightRequest="24"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent"
                            TextColor="#007AFF"/>
                    </StackLayout>

                    <!-- Register button -->
                    <Button Text="Sign In"
                            Command="{Binding RegisterCommand}"
                            BackgroundColor="#FF4500"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            HorizontalOptions="FillAndExpand"/>
                </VerticalStackLayout>

            </Frame>
        </Grid>
    </ScrollView>



</ContentPage>