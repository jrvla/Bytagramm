<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bytagramm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bytagramm"
    xmlns:post="clr-namespace:Bytagramm.Views.Post"
    xmlns:community="clr-namespace:Bytagramm.Views.Community"
    FlyoutBehavior="Flyout"
    Title="Bytagramm" IsEnabled="False" IsBusy="False">
    <!-- Shell.FlyoutBehavior="Disabled" -->

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Registration"
        ContentTemplate="{DataTemplate local:RegistrationPage}"
        Route="RegistrationPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"/>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="Communities"
        ContentTemplate="{DataTemplate local:CommunitiesPage}"
        Route="CommunitiesPage"/>
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage"/>

    <!-- Post -->
        <ShellContent
        Title="CreatePost"
        ContentTemplate="{DataTemplate post:CreatePostPage}"
        Route="CreatePostPage"/>
    <ShellContent
        Title="PostDetailsPage"
        ContentTemplate="{DataTemplate post:PostDetailsPage}"
        Route="PostDetailsPage"/>

    <!-- Community -->
    <ShellContent
        Title="CreateCommunity"
        ContentTemplate="{DataTemplate community:CreateCommunityPage}"
        Route="CreateCommunityPage"/>
    <ShellContent
        Title="CommunityDetailsPage"
        ContentTemplate="{DataTemplate community:CommunityDetailsPage}"
        Route="CommunityDetailsPage"/>

</Shell>
